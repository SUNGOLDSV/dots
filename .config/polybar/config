modules-right = memory separator cpu separator volume separator wlan separator battery separator filesystem separator notifications separator date separator powermenu



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;





[module/memory]

type = internal/memory

internal = 1

format = <label>

label =   %mb_used%



[module/cpu]

type = internal/cpu

internal = 0.5

format =   <label>%

label = %percentage%



[module/date]

type = internal/date

interval = 60

date = %a %d %b

time = %l:%M %p

label =  %date%   %time%

;label =  %time%

format-padding = 1





[module/battery]

type = internal/battery

battery = BAT0

adapter = ADP1

poll-interval = 2

format-discharging =  <label-discharging>%

format-full =  <label-full>% 

format-charging =   <label-charging>% 

label-charging = %percentage%

label-discharging =  %percentage%

label-full =  Fully Charged

time-format = %H:%M



[module/wlan]

type = internal/network

